<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <EditText android:id="@+id/edit_message"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/edit_message"/>

    <EditText android:id="@+id/latitude"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:hint="@string/latitude" android:layout_below="@+id/longitude"
              android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <EditText android:id="@+id/longitude"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:hint="@string/longitude" android:layout_below="@+id/edit_message"
              android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
              android:layout_marginTop="43dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:layout_alignBottom="@id/edit_message"
            android:layout_toRightOf="@id/edit_message"
            android:onClick="sendMessage"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture"
            android:id="@+id/picture"
            android:layout_below="@+id/latitude"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:onClick="showPicture"/>
</RelativeLayout>

